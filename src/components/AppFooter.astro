---
import Container from "./Container.astro";

---

<footer class="bg-primary py-12">
  <Container>
    <div class="flex flex-col items-center justify-between space-y-4 md:flex-row md:space-y-0">
      <!-- Logo y enlace al sitio -->
      <div>
        <a href="/#home" aria-label="logo" class="flex items-center space-x-2">
          <img class="w-[50px]" src="/viosomos-blanco.png" alt="Logo Viosomos">
          <span class="text-2xl font-bold text-white">Viosomos</span>
      </a>
      </div>

      <!-- Enlaces de redes sociales -->
      <div class="flex space-x-4">
        <a href="your_linkedin_url" class="text-white hover:text-gray-300">
          <svg fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <!-- SVG path for LinkedIn -->
          </svg>
        </a>
        <a href="your_twitter_url" class="text-white hover:text-gray-300">
          <svg fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <!-- SVG path for Twitter -->
          </svg>
        </a>
        <a href="your_facebook_url" class="text-white hover:text-gray-300">
          <svg fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <!-- SVG path for Facebook -->
          </svg>
        </a>
        <a href="your_instagram_url" class="text-white hover:text-gray-300">
          <svg fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <!-- SVG path for Instagram -->
          </svg>
        </a>
        <a href="your_youtube_url" class="text-white hover:text-gray-300">
          <svg fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
            <!-- SVG path for YouTube -->
          </svg>
        </a>
      </div>

      <!-- Derechos de autor y política -->
      <div class="text-center text-white text-sm">
        <p>© 2024 VIOSOMOS. Todos los derechos reservados.</p>
        <p><a href="#" class="hover:underline">Política de privacidad</a> | <a href="#" class="hover:underline">Términos de uso</a></p>
      </div>
    </div>
  </Container>
</footer>
